# Google ADK Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Redis Session Service Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MongoDB Session Service Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=adk_sessions
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password

# Session Service Selection
# Options: redis, mongodb, memory
SESSION_SERVICE_TYPE=redis
SESSION_SERVICE_URI=redis://localhost:6379/0

# ADK Configuration
ADK_MODEL=gemini-2.5-flash
ADK_DEBUG=false
